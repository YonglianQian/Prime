<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="297" VerticalAlignment="Top" Width="756" Margin="10,10,0,0">
            <TextBlock TextWrapping="Wrap" Text="Please input your number"/>
            <TextBox Name="txtInput" TextWrapping="Wrap" Margin="3,2,0,0" HorizontalAlignment="Left" Width="100"/>
            <Button Content="Call Service" HorizontalAlignment="Left" Padding="5,2" Margin="2,12,0,10" Click="Button_Click"></Button>
            <TextBlock Name="tbResult" Foreground="Red" FontSize="15" FontWeight="Bold" Margin="2,3"></TextBlock>
        </StackPanel>

    </Grid>
</Window>
